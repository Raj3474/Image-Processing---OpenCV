import cv2 as cv
import numpy as np

img = cv.imread('../resource/pic1.jpg')
cv.imshow('Original Image', img)

height, width  = img.shape[:2]
print(img.shape[:2])

T = np.float32([
  [-1, 0, width],
  [0, 1, 0]
  ])


mirror = cv.warpAffine(img, T, (width, height))
cv.imshow('Mirror image', mirror)

cv.waitKey(5000)
cv.destroyAllWindows()
